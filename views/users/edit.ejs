<% include ../partials/header %>

    <div class="container">
        <h1>Edit User: <%= user.username %></h1>
        <div class="row">   
            <form action="/users/<%= user._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    Username: <input class="form-control" type="text" value="<%= user.username %>" name="user[username]"></input>
                </div>
                <div class="form-group">
                    Initials: <input class="form-control" type="text" value="<%= user.initials %>" name="user[initials]"></input>
                </div>
               <div class="form-group">
                    Role: <input class="form-control" type="text" value="<%= user.role %>" name="user[role]"></input>
                </div>
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>
        
        </div>



<% include ../partials/footer %>