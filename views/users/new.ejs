<% include ../partials/header %>

    <div class="container">
        <h1>Create new User</h1>
        <div class="row">   
            <form action="/users/<%= user._id %>/?_method=PUT" method="post">
                <div class="form-group">
                    Username: <input class="form-control" type="text" value="username>" name="user[username]"></input>
                </div>
                <div class="form-group">
                    Initials: <input class="form-control" type="text" value="initials" name="user[initials]"></input>
                </div>
                <div class="form-group">
                    Email: <input class="form-control" type="email" value="first.last@gulfcoastsupply.com" name="user[email]"></input>
                </div>
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>
        
        </div>



<% include ../partials/footer %>