<% include ../partials/header %>

<div class="container">  

</div>

<div class="container">
    <div class="row">
        <h1>Add a new note for <%= opp.qqId %></h1>
        <form action="/opps/<%= opp._id %>/notes" method="post" enctype='multipart/form-data'>
            <div class="input-group-text">
                <input class="form-check-input" type="checkbox" name="flagCad">Restrict to CAD?</input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="leave notes here" name="text"></input>
             </div>
            <div class="form-group">
                <input class="form-control" type="file" multiple name="files" onchange="javascript:updateList(this.files)"></input>
            </div>
            <div id="fileList">
            </div>
            <div class="form-group" data-style="btn-info">
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
            </div>
        </form>
</div>


<script>
    updateList = function(files){
        let output = $('#fileList');
        output.html('<p>Files attached:<p>')
        for(var i=0; i < files.length; i++){
            output.append("<p>" + files[i].name + "</p>");
            console.log(files[i].name)
        }
        
    }
</script>


